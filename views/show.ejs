<% include partials/header %>

<div class="container mt-3 back">
        <h1> Add New Blog post </h1>
        <div id="show" class="card mx-3 my-3">
            <img src="<%=blogPost.image %>" class="card-img-top" alt="<%=blogPost.quote %>"">
            <div class="card-body">
                <h4> <%=blogPost.title %> </h4>
                <p class="card-text"> <%=blogPost.content %> </p>
            </div>
            
            <form action="/blogposts/<%=blogPost._id%>?_method=DELETE" method="POST" class="mx-3 mb-2">
                <a href="/blogposts" class="btn btn-warning"> Go Back </a>
                <a href="/blogposts/<%=blogPost._id%>/edit" class="btn btn-info"> Edit Post </a>
                <button type="submit" class="btn btn-danger"> Delete Post </button>
                <div class="fb-share-button mt-2" data-href="http://google.com" data-layout="button_count" data-size="large"><a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=http%3A%2F%2Flocalhost%3A4200%2Fblogposts&amp;src=sdkpreparse" class="fb-xfbml-parse-ignore">Share</a></div>
            </form>
        </div>
    </div>

<% include partials/footer %>