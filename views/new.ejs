<% include partials/header %>

<div class="container mt-3">
        <h1> Add New Blog post </h1>
        <div class="card mx-3 my-3">
            <div class="container my-3">
                <form action="/blogposts" method="POST" class="mx-3">
                        
                        <div class="form-group">
                          <label for="title">Title</label>
                          <input name="title" type="text" class="form-control" id="title" placeholder="Title">
                        </div>

                        <div class="form-group">
                            <label for="image">Image URL</label>
                            <input name="image" type="text" class="form-control" id="image" placeholder="Image URL">
                        </div>

                        <div class="form-group">
                            <label for="content">Content</label>
                            <textarea name="content" class="form-control" id="content" rows="10"></textarea>
                        </div>

                        <div class="form-group">
                            <label for="type">Type</label>
                            <input name="type" type="text" class="form-control" id="type" placeholder="Type">
                        </div>

                        <button type="button" class="btn btn-dark"> Add Post </button>

                </form>
            </div>
        </div>

<% include partials/footer %>